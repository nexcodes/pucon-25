generator client {
    provider = "prisma-client-js"
    // output   = "/node_modules/@prisma/client/default"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Schema generated by better auth
model User {
    id            String   @id @default(cuid())
    name          String
    email         String
    emailVerified Boolean
    image         String?
    createdAt     DateTime
    updatedAt     DateTime

    sessions            Session[]
    accounts            Account[]
    memberships         CommunityMember[] // User's community memberships
    personalGoals       PersonalGoal[] // User's personal goals
    activityLogs        ActivityLog[] // User's carbon footprint activities
    posts               ActivityPost[] // User's activity feed posts
    CommunityGoal       CommunityGoal[]
    CommunityInvite     CommunityInvite[]
    PersonalActivityLog PersonalActivityLog[]

    @@unique([email])
    @@map("user")
}

model Session {
    id        String   @id
    expiresAt DateTime
    token     String
    role      Role     @default(USER)
    createdAt DateTime
    updatedAt DateTime
    ipAddress String?
    userAgent String?
    userId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([token])
    @@map("session")
}

model Account {
    id                    String    @id
    accountId             String
    providerId            String
    userId                String
    user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    accessToken           String?
    refreshToken          String?
    idToken               String?
    accessTokenExpiresAt  DateTime?
    refreshTokenExpiresAt DateTime?
    scope                 String?
    password              String?
    createdAt             DateTime
    updatedAt             DateTime

    @@map("account")
}

model Verification {
    id         String    @id
    identifier String
    value      String
    expiresAt  DateTime
    createdAt  DateTime?
    updatedAt  DateTime?

    @@map("verification")
}

model Community {
    id              String            @id @default(cuid())
    name            String
    description     String?
    niche           CommunityNiche // Specific focus of the community
    createdAt       DateTime          @default(now())
    updatedAt       DateTime          @updatedAt
    members         CommunityMember[] // Members of the community
    goals           CommunityGoal[] // Community-wide goals
    posts           ActivityPost[] // Community activity feed posts
    ActivityLog     ActivityLog[]
    CommunityInvite CommunityInvite[]

    @@map("community")
}

// Community membership model
model CommunityMember {
    id          String    @id @default(cuid())
    userId      String
    user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    communityId String
    community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
    role        Role      @default(USER)
    joinedAt    DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    @@unique([userId, communityId])
    @@map("community_member")
}

model CommunityInvite {
    id          String    @id @default(cuid())
    communityId String
    community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)

    status  InviteStatus @default(PENDING)
    message String? // Optional message to include with the invitation

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    user      User     @relation(fields: [userId], references: [id])
    userId    String

    @@map("community_invite")
}

// Community goals model
model CommunityGoal {
    id          String        @id @default(cuid())
    communityId String
    community   Community     @relation(fields: [communityId], references: [id], onDelete: Cascade)
    title       String
    description String        @default("description")
    targetValue Float // e.g., tons of CO2 to reduce
    progress    Float         @default(0.0) // Current progress towards goal
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt
    createdById String
    createdBy   User          @relation(fields: [createdById], references: [id], onDelete: Cascade)
    ActivityLog ActivityLog[]

    @@map("community_goal")
}

// Activity log for carbon footprint reduction
model ActivityLog {
    id           String        @id @default(cuid())
    userId       String
    user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
    communityId  String
    community    Community     @relation(fields: [communityId], references: [id], onDelete: Cascade)
    goalId       String
    goal         CommunityGoal @relation(fields: [goalId], references: [id], onDelete: Cascade)
    description  String
    carbonSaved  Float // Amount of CO2 saved (in tons)
    activityDate DateTime
    createdAt    DateTime      @default(now())
    updatedAt    DateTime      @updatedAt

    @@map("activity_log")
}

// Activity feed posts
model ActivityPost {
    id          String    @id @default(cuid())
    userId      String
    user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    communityId String
    community   Community @relation(fields: [communityId], references: [id], onDelete: Cascade)
    content     String    @db.Text
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    @@map("activity_post")
}

// Personal goals model
model PersonalGoal {
    id                  String                @id @default(cuid())
    userId              String
    user                User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
    title               String
    description         String
    targetValue         Float // e.g., tons of CO2 to reduce
    progress            Float                 @default(0.0) // Current progress towards goal
    createdAt           DateTime              @default(now())
    updatedAt           DateTime              @updatedAt
    PersonalActivityLog PersonalActivityLog[]

    @@map("personal_goal")
}

// Activity log for carbon footprint reduction
model PersonalActivityLog {
    id     String @id @default(cuid())
    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    goalId       String
    goal         PersonalGoal @relation(fields: [goalId], references: [id], onDelete: Cascade)
    description  String
    carbonSaved  Float // Amount of CO2 saved (in tons)
    activityDate DateTime
    createdAt    DateTime     @default(now())
    updatedAt    DateTime     @updatedAt
}

// ENUMS

enum Role {
    USER
    COMMUNITY_LEADER
    ADMIN
}

enum CommunityNiche {
    SUSTAINABLE_TRANSPORT
    RENEWABLE_ENERGY
    ZERO_WASTE
    ECO_FRIENDLY_DIET
    GREEN_TECH
    SUSTAINABLE_FASHION
    URBAN_GARDENING
}

enum InviteStatus {
    PENDING
    ACCEPTED
    DECLINED
}
